<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@drawable/login_bg">
  <TextView 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="30px"
    android:layout_marginTop="30px"
    android:layout_marginLeft="60px"
    android:typeface="sans"
    android:textStyle="bold"
    android:textColor="#006838"
    android:text="中国儿童多元智能发展测评软件" />
  <TextView 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="25px"
    android:layout_marginTop="90px"
    android:layout_marginLeft="80px"
    android:typeface="sans"
    android:textStyle="bold"
    android:textColor="#FFFFFF"
    android:shadowRadius="1"
    android:shadowDx="2"
    android:shadowColor="#006838"
    android:text="宝宝姓名" />
  <EditText android:id="@+id/name"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:typeface="sans"
    android:textStyle="bold"
    android:textColor="#006838"
    android:layout_marginTop="125px"
    android:layout_marginLeft="80px"
    android:layout_marginRight="70px" />
  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="25px"
    android:typeface="sans"
    android:textStyle="bold"
    android:textColor="#FFFFFF"
    android:shadowRadius="1"
    android:shadowDx="2"
    android:shadowColor="#006838"
    android:layout_marginTop="200px"
    android:layout_marginLeft="80px"
    android:text="出生日期" />
  <DatePicker android:id="@+id/date"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="235px"
    android:layout_marginLeft="80px" />
  <Button android:id="@+id/login"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:layout_marginTop="410px"
    android:layout_marginLeft="660px"
    android:background="@drawable/login_btn" />
</RelativeLayout>
