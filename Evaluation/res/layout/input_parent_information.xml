<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@drawable/login_bg">
  <TextView 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:textSize="25px"
    android:layout_marginTop="10px"
    android:gravity="center_horizontal"
    android:typeface="sans"
    android:textColor="#006838"
    android:textStyle="bold"
    android:text="0~6岁婴幼儿体格智能情商发展测试评价系统" />
  <TextView 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:textSize="20px"
    android:layout_marginTop="40px"
    android:layout_marginLeft="30px"
    android:typeface="sans"
    android:textColor="#006838"
    android:text="请输入家长档案：" />
  <LinearLayout android:id="@+id/first_line"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="60px"
    android:layout_marginLeft="80px">
    <TextView 
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="25px"
      android:typeface="sans"
      android:textColor="#006838"
      android:text="妈妈姓名：" />
    <EditText android:id="@+id/mother_name"
      android:layout_width="200px"
      android:layout_height="wrap_content"
      android:textSize="25px"
      android:typeface="sans"
      android:textColor="#006838"
      android:hint="妈妈姓名" />
    <TextView 
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="25px"
      android:typeface="sans"
      android:textColor="#006838"
      android:layout_marginLeft="60px"
      android:text="职业：" />
    <EditText android:id="@+id/mother_job"
      android:layout_width="200px"
      android:layout_height="wrap_content"
      android:textSize="25px"
      android:typeface="sans"
      android:textColor="#006838"
      android:hint="职业" />
  </LinearLayout>
  <LinearLayout android:id="@+id/second_line"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/first_line"
    android:layout_alignLeft="@id/first_line">
    <TextView 
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="25px"
      android:typeface="sans"
      android:textColor="#006838"
      android:text="文化程度：" />
    <EditText android:id="@+id/mother_education"
      android:layout_width="200px"
      android:layout_height="wrap_content"
      android:textSize="25px"
      android:typeface="sans"
      android:textColor="#006838"
      android:hint="文化程度" />
    <TextView 
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="25px"
      android:typeface="sans"
      android:textColor="#006838"
      android:layout_marginLeft="10px"
      android:text="工作单位：" />
    <EditText android:id="@+id/mother_workplace"
      android:layout_width="200px"
      android:layout_height="wrap_content"
      android:textSize="25px"
      android:typeface="sans"
      android:textColor="#006838"
      android:hint="工作单位" />
  </LinearLayout>
  <LinearLayout android:id="@+id/third_line"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/second_line"
    android:layout_alignLeft="@id/second_line">
    <TextView 
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="25px"
      android:typeface="sans"
      android:textColor="#006838"
      android:text="爸爸姓名：" />
    <EditText android:id="@+id/father_name"
      android:layout_width="200px"
      android:layout_height="wrap_content"
      android:textSize="25px"
      android:typeface="sans"
      android:textColor="#006838"
      android:inputType="none"
      android:hint="爸爸姓名" />
    <TextView 
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="25px"
      android:typeface="sans"
      android:textColor="#006838"
      android:layout_marginLeft="60px"
      android:text="职业：" />
    <EditText android:id="@+id/father_job"
      android:layout_width="200px"
      android:layout_height="wrap_content"
      android:textSize="25px"
      android:typeface="sans"
      android:textColor="#006838"
      android:hint="职业" />
  </LinearLayout>
  <LinearLayout android:id="@+id/forth_line"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/third_line"
    android:layout_alignLeft="@id/third_line">
    <TextView 
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="25px"
      android:typeface="sans"
      android:textColor="#006838"
      android:text="文化程度：" />
    <EditText android:id="@+id/father_education"
      android:layout_width="200px"
      android:layout_height="wrap_content"
      android:textSize="25px"
      android:typeface="sans"
      android:textColor="#006838"
      android:hint="文化程度" />
    <TextView 
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="25px"
      android:typeface="sans"
      android:textColor="#006838"
      android:layout_marginLeft="10px"
      android:text="工作单位：" />
    <EditText android:id="@+id/father_workplace"
      android:layout_width="200px"
      android:layout_height="wrap_content"
      android:textSize="25px"
      android:typeface="sans"
      android:textColor="#006838"
      android:hint="工作单位" />
  </LinearLayout>
  <LinearLayout android:id="@+id/fifth_line"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/forth_line"
    android:layout_alignLeft="@id/forth_line">
    <TextView 
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="25px"
      android:typeface="sans"
      android:textColor="#006838"
      android:text="联系电话：" />
    <EditText android:id="@+id/home_number"
      android:layout_width="200px"
      android:layout_height="wrap_content"
      android:textSize="25px"
      android:typeface="sans"
      android:textColor="#006838"
      android:hint="联系电话" />
    <TextView 
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="25px"
      android:typeface="sans"
      android:textColor="#006838"
      android:layout_marginLeft="60px"
      android:text="手机：" />
    <EditText android:id="@+id/phone_number"
      android:layout_width="200px"
      android:layout_height="wrap_content"
      android:textSize="25px"
      android:typeface="sans"
      android:textColor="#006838"
      android:hint="手机" />
  </LinearLayout>
  <LinearLayout android:id="@+id/sixth_line"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/fifth_line"
    android:layout_alignLeft="@id/fifth_line">
    <TextView 
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="25px"
      android:typeface="sans"
      android:textColor="#006838"
      android:text="家庭住址：" />
    <EditText android:id="@+id/home_address"
      android:layout_width="530px"
      android:layout_height="wrap_content"
      android:textSize="25px"
      android:typeface="sans"
      android:textColor="#006838"
      android:hint="家庭住址" />
  </LinearLayout>
  <LinearLayout android:id="@+id/seventh_line"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/sixth_line"
    android:layout_alignLeft="@id/sixth_line">
    <TextView 
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="25px"
      android:typeface="sans"
      android:textColor="#006838"
      android:text="邮政编码：" />
    <EditText android:id="@+id/zip_code"
      android:layout_width="200px"
      android:layout_height="wrap_content"
      android:textSize="25px"
      android:typeface="sans"
      android:textColor="#006838"
      android:hint="邮政编码" />
    <TextView 
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="25px"
      android:typeface="sans"
      android:textColor="#006838"
      android:layout_marginLeft="10px"
      android:text="电子信箱：" />
    <EditText android:id="@+id/email_address"
      android:layout_width="200px"
      android:layout_height="wrap_content"
      android:textSize="25px"
      android:typeface="sans"
      android:textColor="#006838"
      android:hint="电子信箱" />
  </LinearLayout>
  <Button android:id="@+id/back"
    android:textSize="20px"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:typeface="sans"
    android:textStyle="bold"
    android:textColor="#006838"
    android:layout_marginTop="420px"
    android:layout_marginLeft="20px"
    android:text="请按此返回上一步" />
  <Button android:id="@+id/enter_or_exit"
    android:textSize="20px"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:typeface="sans"
    android:textStyle="bold"
    android:textColor="#006838"
    android:layout_marginTop="420px"
    android:layout_marginLeft="600px"
    android:text="请按此进入或取消" />
</RelativeLayout>
